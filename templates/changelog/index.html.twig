{% extends 'base.html.twig' %}

{% block title %}Changelog | Portal IASDCanelas{% endblock %}

{% block body %}
    <!-- Vertical Sidebar -->
    <div>
      {% include 'partials/sidebar-collapse.html.twig' %}
      <!-- Main Content -->
      <div id="content" class="position-relative h-100">
        {% include 'partials/topbar-second.html.twig' %}
        <!-- container -->
        <div class="custom-container">

          <!-- Page Header -->
          <div class="row mb-6">
            <div class="col-12">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h1 class="mb-1">
                    <i class="ti ti-git-merge me-2"></i>
                    {{ 'changelog.title'|trans({}, 'messages') }}
                  </h1>
                  <p class="text-muted mb-0">{{ 'changelog.subtitle'|trans({}, 'messages') }}</p>
                </div>
                <div>
                  <span class="badge bg-primary fs-6">
                    {% if groupedChangelog|length > 0 %}
                      {{ 'changelog.latest_version'|trans({'%version%': groupedChangelog|keys|first}, 'messages') }}
                    {% endif %}
                  </span>
                </div>
              </div>
            </div>
          </div>

          {% if groupedChangelog|length == 0 %}
            <div class="row">
              <div class="col-12">
                <div class="card">
                  <div class="card-body text-center py-10">
                    <i class="ti ti-file-text display-4 text-muted mb-3"></i>
                    <h4 class="text-muted">{{ 'changelog.empty'|trans({}, 'messages') }}</h4>
                  </div>
                </div>
              </div>
            </div>
          {% else %}

            <!-- Timeline -->
            {% for version, entries in groupedChangelog %}
              <div class="row mb-6">
                <div class="col-12">
                  <div class="card">
                    <div class="card-header bg-light">
                      <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center gap-3">
                          <span class="badge bg-primary fs-6 px-3 py-2">v{{ version }}</span>
                          <div>
                            <h4 class="mb-0">{{ 'changelog.version_label'|trans({'%version%': version}, 'messages') }}</h4>
                            <small class="text-muted">
                              {{ entries|first.date|date('d/m/Y') }}
                              &mdash;
                              {{ entries|length }} {{ 'changelog.changes_count'|trans({}, 'messages') }}
                            </small>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="card-body p-0">
                      <div class="table-responsive">
                        <table class="table table-hover mb-0">
                          <thead class="table-light">
                            <tr>
                              <th style="width: 120px;">{{ 'changelog.table.type'|trans({}, 'messages') }}</th>
                              <th style="width: 140px;">{{ 'changelog.table.category'|trans({}, 'messages') }}</th>
                              <th>{{ 'changelog.table.title'|trans({}, 'messages') }}</th>
                              <th>{{ 'changelog.table.description'|trans({}, 'messages') }}</th>
                              <th style="width: 130px;">{{ 'changelog.table.date'|trans({}, 'messages') }}</th>
                              <th style="width: 130px;">{{ 'changelog.table.author'|trans({}, 'messages') }}</th>
                            </tr>
                          </thead>
                          <tbody>
                            {% for entry in entries %}
                              <tr>
                                <td>
                                  <span class="badge {{ entry.typeBadgeClass }} rounded-pill">
                                    <i class="{{ entry.typeIcon }} me-1"></i>
                                    {{ entry.type|capitalize }}
                                  </span>
                                </td>
                                <td>
                                  {% if entry.category %}
                                    <span class="badge bg-light text-dark">{{ entry.category }}</span>
                                  {% else %}
                                    <span class="text-muted">-</span>
                                  {% endif %}
                                </td>
                                <td class="fw-semibold">{{ entry.title }}</td>
                                <td class="text-muted">{{ entry.description }}</td>
                                <td>
                                  <small>{{ entry.date|date('d/m/Y') }}</small>
                                </td>
                                <td>
                                  {% if entry.author %}
                                    <small class="text-muted">
                                      <i class="ti ti-user me-1"></i>
                                      {{ entry.author }}
                                    </small>
                                  {% else %}
                                    <span class="text-muted">-</span>
                                  {% endif %}
                                </td>
                              </tr>
                            {% endfor %}
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            {% endfor %}

          {% endif %}

        </div>
      </div>
    </div>
{% endblock %}
