{% extends 'base.html.twig' %}

{% block title %}{{ 'auth.forgot_password.email_subject'|trans({}, 'auth') }}{% endblock %}

{% block body %}
<div style="max-width: 600px; margin: 0 auto; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; color: #333;">
    <div style="text-align: center; padding: 30px 0; background-color: #f8f9fa; border-bottom: 3px solid #0d6efd;">
        <h1 style="margin: 0; color: #0d6efd; font-size: 24px;">Portal IASDCanelas</h1>
    </div>

    <div style="padding: 40px 30px;">
        <h2 style="margin-top: 0; color: #333;">{{ 'auth.forgot_password.email_heading'|trans({}, 'auth') }}</h2>

        <p>{{ 'auth.forgot_password.email_greeting'|trans({'%name%': user.fullName}, 'auth') }}</p>

        <p>{{ 'auth.forgot_password.email_body'|trans({}, 'auth') }}</p>

        <div style="text-align: center; margin: 30px 0;">
            <a href="{{ resetUrl }}"
               style="display: inline-block; padding: 14px 32px; background-color: #0d6efd; color: #ffffff; text-decoration: none; border-radius: 6px; font-weight: 600; font-size: 16px;">
                {{ 'auth.forgot_password.email_button'|trans({}, 'auth') }}
            </a>
        </div>

        <p style="color: #6c757d; font-size: 14px;">
            {{ 'auth.forgot_password.email_expiry'|trans({}, 'auth') }}
        </p>

        <p style="color: #6c757d; font-size: 14px;">
            {{ 'auth.forgot_password.email_ignore'|trans({}, 'auth') }}
        </p>

        <hr style="border: none; border-top: 1px solid #dee2e6; margin: 30px 0;">

        <p style="color: #adb5bd; font-size: 12px; text-align: center;">
            {{ 'auth.forgot_password.email_copy_link'|trans({}, 'auth') }}<br>
            <a href="{{ resetUrl }}" style="color: #0d6efd; word-break: break-all;">{{ resetUrl }}</a>
        </p>
    </div>

    <div style="text-align: center; padding: 20px; background-color: #f8f9fa; color: #6c757d; font-size: 12px;">
        <p style="margin: 0;">&copy; {{ 'now'|date('Y') }} Portal IASDCanelas. Todos os direitos reservados.</p>
    </div>
</div>
{% endblock %}
