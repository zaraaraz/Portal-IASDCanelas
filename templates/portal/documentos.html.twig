                    <div class="col-md-3">
                      <label class="form-label">{{ 'documentos.filter_type'|trans({}, 'dashboard') }}</label>
                      <select class="form-select">
                        <option>{{ 'documentos.all_types'|trans({}, 'dashboard') }}</option>
                        <option>PDF</option>
                        <option>DOCX</option>
                        <option>XLSX</option>
                        <option>{{ 'documentos.type.image'|trans({}, 'dashboard') }}</option>
                      </select>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

