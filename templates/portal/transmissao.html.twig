{% extends 'base.html.twig' %}

{% block title %}{{ 'transmissao.title'|trans({}, 'dashboard') }} | Portal IASDCanelas{% endblock %}

{% block body %}
    <div>
      {% include 'partials/sidebar-collapse.html.twig' %}
      <div id="content" class="position-relative h-100">
        {% include 'partials/topbar-second.html.twig' %}
        <div class="custom-container">

          {# ── Page Header ── #}
          <div class="row g-6 mb-6">
            <div class="col-12">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h3 class="mb-1">{{ 'transmissao.title'|trans({}, 'dashboard') }}</h3>
                  <p class="text-secondary mb-0">{{ 'transmissao.subtitle'|trans({}, 'dashboard') }}</p>
                </div>
              </div>
            </div>
          </div>

          {# ── Stat Cards ── #}
          <div class="row g-6 mb-6">
            <div class="col-xl-3 col-md-6 col-12">
              <div class="card card-lg bg-gradient-primary">
                <div class="card-body d-flex flex-column gap-8">
                  <div class="d-flex justify-content-between align-items-center">
                    <div>
                      <div class="fw-semibold">{{ 'transmissao.monthly_broadcasts'|trans({}, 'dashboard') }}</div>
                    </div>
                    <div class="text-primary-emphasis">
                      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-broadcast"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M18.364 19.364a9 9 0 1 0 -12.728 0" /><path d="M15.536 16.536a5 5 0 1 0 -7.072 0" /><path d="M12 13m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0" /></svg>
                    </div>
                  </div>
                  <div class="lh-1 d-flex flex-column gap-3">
                    <div class="fs-1 fw-bold">8</div>
                    <p class="mb-0">
                      <span class="text-primary-emphasis">2</span>
                      <span class="text-secondary">{{ 'transmissao.done'|trans({}, 'dashboard') }}</span>
                    </p>
                  </div>
                </div>
              </div>
            </div>

            <div class="col-xl-3 col-md-6 col-12">
              <div class="card card-lg bg-gradient-info">
                <div class="card-body d-flex flex-column gap-8">
                  <div class="d-flex justify-content-between align-items-center">
                    <div>
                      <div class="fw-semibold">{{ 'transmissao.saturday_team'|trans({}, 'dashboard') }}</div>
                    </div>
                    <div class="text-info-emphasis">
                      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-users-group"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M10 13a2 2 0 1 0 4 0a2 2 0 0 0 -4 0" /><path d="M8 21v-1a2 2 0 0 1 2 -2h4a2 2 0 0 1 2 2v1" /><path d="M15 5a2 2 0 1 0 4 0a2 2 0 0 0 -4 0" /><path d="M17 10h2a2 2 0 0 1 2 2v1" /><path d="M5 5a2 2 0 1 0 4 0a2 2 0 0 0 -4 0" /><path d="M3 13v-1a2 2 0 0 1 2 -2h2" /></svg>
                    </div>
                  </div>
                  <div class="lh-1 d-flex flex-column gap-3">
                    <div class="fs-1 fw-bold">4</div>
                    <p class="mb-0">
                      <span class="text-secondary">{{ 'transmissao.members_assigned'|trans({}, 'dashboard') }}</span>
                    </p>
                  </div>
                </div>
              </div>
            </div>

            <div class="col-xl-3 col-md-6 col-12">
              <div class="card card-lg bg-gradient-success">
                <div class="card-body d-flex flex-column gap-8">
                  <div class="d-flex justify-content-between align-items-center">
                    <div>
                      <div class="fw-semibold">{{ 'transmissao.tech_setup'|trans({}, 'dashboard') }}</div>
                    </div>
                    <div class="text-success-emphasis">
                      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-settings"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M10.325 4.317c.426 -1.756 2.924 -1.756 3.35 0a1.724 1.724 0 0 0 2.573 1.066c1.543 -.94 3.31 .826 2.37 2.37a1.724 1.724 0 0 0 1.065 2.572c1.756 .426 1.756 2.924 0 3.35a1.724 1.724 0 0 0 -1.066 2.573c.94 1.543 -.826 3.31 -2.37 2.37a1.724 1.724 0 0 0 -2.572 1.065c-.426 1.756 -2.924 1.756 -3.35 0a1.724 1.724 0 0 0 -2.573 -1.066c-1.543 .94 -3.31 -.826 -2.37 -2.37a1.724 1.724 0 0 0 -1.065 -2.572c-1.756 -.426 -1.756 -2.924 0 -3.35a1.724 1.724 0 0 0 1.066 -2.573c-.94 -1.543 .826 -3.31 2.37 -2.37c1 .608 2.296 .07 2.572 -1.065z" /><path d="M9 12a3 3 0 1 0 6 0a3 3 0 0 0 -6 0" /></svg>
                    </div>
                  </div>
                  <div class="lh-1 d-flex flex-column gap-3">
                    <div class="fs-1 fw-bold">
                      <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-circle-check text-success-emphasis"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0" /><path d="M9 12l2 2l4 -4" /></svg>
                    </div>
                    <p class="mb-0">
                      <span class="text-success-emphasis">{{ 'transmissao.operational'|trans({}, 'dashboard') }}</span>
                    </p>
                  </div>
                </div>
              </div>
            </div>

            <div class="col-xl-3 col-md-6 col-12">
              <div class="card card-lg bg-gradient-warning">
                <div class="card-body d-flex flex-column gap-8">
                  <div class="d-flex justify-content-between align-items-center">
                    <div>
                      <div class="fw-semibold">{{ 'transmissao.stability'|trans({}, 'dashboard') }}</div>
                    </div>
                    <div class="text-warning-emphasis">
                      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-wifi"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M12 18l.01 0" /><path d="M9.172 15.172a4 4 0 0 1 5.656 0" /><path d="M6.343 12.343a8 8 0 0 1 11.314 0" /><path d="M3.515 9.515c4.686 -4.687 12.284 -4.687 16.97 0" /></svg>
                    </div>
                  </div>
                  <div class="lh-1 d-flex flex-column gap-3">
                    <div class="fs-1 fw-bold">98%</div>
                    <p class="mb-0">
                      <span class="text-secondary">{{ 'transmissao.uptime'|trans({}, 'dashboard') }}</span>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="row g-6 mb-6">
            {# ── Upcoming Broadcasts Table ── #}
            <div class="col-xl-8 col-12">
              <div class="card">
                <div class="card-header border-bottom-0 d-flex justify-content-between align-items-center">
                  <h5 class="card-title mb-0">{{ 'transmissao.upcoming'|trans({}, 'dashboard') }}</h5>
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table text-nowrap mb-0 table-centered table-hover">
                      <thead>
                        <tr>
                          <th>{{ 'transmissao.table.date'|trans({}, 'dashboard') }}</th>
                          <th>{{ 'transmissao.table.service'|trans({}, 'dashboard') }}</th>
                          <th>{{ 'transmissao.table.platform'|trans({}, 'dashboard') }}</th>
                          <th>{{ 'transmissao.table.team'|trans({}, 'dashboard') }}</th>
                          <th>{{ 'transmissao.table.status'|trans({}, 'dashboard') }}</th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr>
                          <td>
                            <div>
                              <div class="fw-semibold">15 Fev 2025</div>
                              <div class="small text-secondary">{{ 'dashboard.sample.saturday'|trans({}, 'dashboard') }} — 11:00</div>
                            </div>
                          </td>
                          <td>{{ 'dashboard.service_types.divine_worship'|trans({}, 'dashboard') }}</td>
                          <td>
                            <span class="badge text-primary-emphasis bg-primary-subtle rounded-2">YouTube</span>
                            <span class="badge text-info-emphasis bg-info-subtle rounded-2">Facebook</span>
                          </td>
                          <td>
                            <div class="avatar-group">
                              <span class="avatar avatar-sm avatar-primary">
                                <span class="avatar-initials rounded-circle">JS</span>
                              </span>
                              <span class="avatar avatar-sm avatar-info">
                                <span class="avatar-initials rounded-circle">MC</span>
                              </span>
                            </div>
                          </td>
                          <td>
                            <span class="badge text-success-emphasis bg-success-subtle rounded-2">{{ 'transmissao.status.ready'|trans({}, 'dashboard') }}</span>
                          </td>
                        </tr>
                        <tr>
                          <td>
                            <div>
                              <div class="fw-semibold">22 Fev 2025</div>
                              <div class="small text-secondary">{{ 'dashboard.sample.saturday'|trans({}, 'dashboard') }} — 11:00</div>
                            </div>
                          </td>
                          <td>{{ 'dashboard.service_types.divine_worship'|trans({}, 'dashboard') }}</td>
                          <td>
                            <span class="badge text-primary-emphasis bg-primary-subtle rounded-2">YouTube</span>
                            <span class="badge text-info-emphasis bg-info-subtle rounded-2">Facebook</span>
                          </td>
                          <td>
                            <div class="avatar-group">
                              <span class="avatar avatar-sm avatar-warning">
                                <span class="avatar-initials rounded-circle">AR</span>
                              </span>
                              <span class="avatar avatar-sm avatar-success">
                                <span class="avatar-initials rounded-circle">PL</span>
                              </span>
                            </div>
                          </td>
                          <td>
                            <span class="badge text-warning-emphasis bg-warning-subtle rounded-2">{{ 'transmissao.status.pending'|trans({}, 'dashboard') }}</span>
                          </td>
                        </tr>
                        <tr>
                          <td>
                            <div>
                              <div class="fw-semibold">01 Mar 2025</div>
                              <div class="small text-secondary">{{ 'dashboard.sample.saturday'|trans({}, 'dashboard') }} — 11:00</div>
                            </div>
                          </td>
                          <td>{{ 'dashboard.service_types.divine_worship'|trans({}, 'dashboard') }}</td>
                          <td>
                            <span class="badge text-primary-emphasis bg-primary-subtle rounded-2">YouTube</span>
                          </td>
                          <td>
                            <span class="small text-secondary">{{ 'transmissao.not_assigned'|trans({}, 'dashboard') }}</span>
                          </td>
                          <td>
                            <span class="badge text-danger-emphasis bg-danger-subtle rounded-2">{{ 'transmissao.status.no_team'|trans({}, 'dashboard') }}</span>
                          </td>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>

            {# ── Technical Checklist ── #}
            <div class="col-xl-4 col-12">
              <div class="card">
                <div class="card-header border-bottom-0">
                  <h5 class="card-title mb-0">{{ 'transmissao.tech_checklist'|trans({}, 'dashboard') }}</h5>
                </div>
                <div class="card-body">
                  <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex align-items-center justify-content-between px-0">
                      <div class="d-flex align-items-center">
                        <span class="me-3 text-success">
                          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-circle-check"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0" /><path d="M9 12l2 2l4 -4" /></svg>
                        </span>
                        {{ 'transmissao.check.cameras'|trans({}, 'dashboard') }}
                      </div>
                      <span class="badge text-success-emphasis bg-success-subtle rounded-2">OK</span>
                    </li>
                    <li class="list-group-item d-flex align-items-center justify-content-between px-0">
                      <div class="d-flex align-items-center">
                        <span class="me-3 text-success">
                          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-circle-check"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0" /><path d="M9 12l2 2l4 -4" /></svg>
                        </span>
                        {{ 'transmissao.check.encoder'|trans({}, 'dashboard') }}
                      </div>
                      <span class="badge text-success-emphasis bg-success-subtle rounded-2">OK</span>
                    </li>
                    <li class="list-group-item d-flex align-items-center justify-content-between px-0">
                      <div class="d-flex align-items-center">
                        <span class="me-3 text-success">
                          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-circle-check"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0" /><path d="M9 12l2 2l4 -4" /></svg>
                        </span>
                        {{ 'transmissao.check.internet'|trans({}, 'dashboard') }}
                      </div>
                      <span class="badge text-success-emphasis bg-success-subtle rounded-2">OK</span>
                    </li>
                    <li class="list-group-item d-flex align-items-center justify-content-between px-0">
                      <div class="d-flex align-items-center">
                        <span class="me-3 text-success">
                          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-circle-check"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0" /><path d="M9 12l2 2l4 -4" /></svg>
                        </span>
                        {{ 'transmissao.check.audio_mixer'|trans({}, 'dashboard') }}
                      </div>
                      <span class="badge text-success-emphasis bg-success-subtle rounded-2">OK</span>
                    </li>
                    <li class="list-group-item d-flex align-items-center justify-content-between px-0">
                      <div class="d-flex align-items-center">
                        <span class="me-3 text-warning">
                          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-alert-triangle"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M12 9v4" /><path d="M10.363 3.591l-8.106 13.534a1.914 1.914 0 0 0 1.636 2.871h16.214a1.914 1.914 0 0 0 1.636 -2.87l-8.106 -13.536a1.914 1.914 0 0 0 -3.274 0z" /><path d="M12 16h.01" /></svg>
                        </span>
                        {{ 'transmissao.check.overlays'|trans({}, 'dashboard') }}
                      </div>
                      <span class="badge text-warning-emphasis bg-warning-subtle rounded-2">{{ 'transmissao.check.update_needed'|trans({}, 'dashboard') }}</span>
                    </li>
                    <li class="list-group-item d-flex align-items-center justify-content-between px-0">
                      <div class="d-flex align-items-center">
                        <span class="me-3 text-success">
                          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-circle-check"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0" /><path d="M9 12l2 2l4 -4" /></svg>
                        </span>
                        {{ 'transmissao.check.streaming_keys'|trans({}, 'dashboard') }}
                      </div>
                      <span class="badge text-success-emphasis bg-success-subtle rounded-2">OK</span>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
{% endblock %}
