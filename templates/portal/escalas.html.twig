{% extends 'base.html.twig' %}

{% block title %}{{ 'escalas.title'|trans({}, 'dashboard') }} | Portal IASDCanelas{% endblock %}

{% block body %}
    <div>
      {% include 'partials/sidebar-collapse.html.twig' %}
      <div id="content" class="position-relative h-100">
        {% include 'partials/topbar-second.html.twig' %}
        <div class="custom-container">

          {# ── Page Header ── #}
          <div class="row g-6 mb-6">
            <div class="col-12">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h3 class="mb-1">{{ 'escalas.title'|trans({}, 'dashboard') }}</h3>
                  <p class="text-secondary mb-0">{{ 'escalas.subtitle'|trans({}, 'dashboard') }}</p>
                </div>
              </div>
            </div>
          </div>

          {# ── Summary Cards ── #}
          <div class="row g-6 mb-6">
            <div class="col-xl-3 col-md-6 col-12">
              <div class="card card-lg bg-gradient-primary">
                <div class="card-body d-flex flex-column gap-8">
                  <div class="d-flex justify-content-between align-items-center">
                    <div>
                      <div class="fw-semibold">{{ 'escalas.total'|trans({}, 'dashboard') }}</div>
                    </div>
                    <div class="text-primary-emphasis">
                      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-list-check"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M3.5 5.5l1.5 1.5l2.5 -2.5" /><path d="M3.5 11.5l1.5 1.5l2.5 -2.5" /><path d="M3.5 17.5l1.5 1.5l2.5 -2.5" /><path d="M11 6l9 0" /><path d="M11 12l9 0" /><path d="M11 18l9 0" /></svg>
                    </div>
                  </div>
                  <div class="lh-1 d-flex flex-column gap-3">
                    <div class="fs-1 fw-bold">12</div>
                    <p class="mb-0">
                      <span class="text-secondary">{{ 'escalas.this_month'|trans({}, 'dashboard') }}</span>
                    </p>
                  </div>
                </div>
              </div>
            </div>

            <div class="col-xl-3 col-md-6 col-12">
              <div class="card card-lg bg-gradient-success">
                <div class="card-body d-flex flex-column gap-8">
                  <div class="d-flex justify-content-between align-items-center">
                    <div>
                      <div class="fw-semibold">{{ 'escalas.confirmed'|trans({}, 'dashboard') }}</div>
                    </div>
                    <div class="text-success-emphasis">
                      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-circle-check"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0" /><path d="M9 12l2 2l4 -4" /></svg>
                    </div>
                  </div>
                  <div class="lh-1 d-flex flex-column gap-3">
                    <div class="fs-1 fw-bold">8</div>
                  </div>
                </div>
              </div>
            </div>

            <div class="col-xl-3 col-md-6 col-12">
              <div class="card card-lg bg-gradient-warning">
                <div class="card-body d-flex flex-column gap-8">
                  <div class="d-flex justify-content-between align-items-center">
                    <div>
                      <div class="fw-semibold">{{ 'escalas.pending_status'|trans({}, 'dashboard') }}</div>
                    </div>
                    <div class="text-warning-emphasis">
                      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-clock"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0" /><path d="M12 7v5l3 3" /></svg>
                    </div>
                  </div>
                  <div class="lh-1 d-flex flex-column gap-3">
                    <div class="fs-1 fw-bold">3</div>
                  </div>
                </div>
              </div>
            </div>

            <div class="col-xl-3 col-md-6 col-12">
              <div class="card card-lg bg-gradient-danger">
                <div class="card-body d-flex flex-column gap-8">
                  <div class="d-flex justify-content-between align-items-center">
                    <div>
                      <div class="fw-semibold">{{ 'escalas.swap_requests'|trans({}, 'dashboard') }}</div>
                    </div>
                    <div class="text-danger-emphasis">
                      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-arrows-exchange"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M7 10h14l-4 -4" /><path d="M17 14h-14l4 4" /></svg>
                    </div>
                  </div>
                  <div class="lh-1 d-flex flex-column gap-3">
                    <div class="fs-1 fw-bold">1</div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          {# ── Schedules Table ── #}
          <div class="row g-6 mb-6">
            <div class="col-12">
              <div class="card">
                <div class="card-header border-bottom-0 d-flex justify-content-between align-items-center">
                  <h5 class="card-title mb-0">{{ 'escalas.my_schedules'|trans({}, 'dashboard') }}</h5>
                  <div class="d-flex gap-2">
                    <select class="form-select form-select-sm" style="width: auto;">
                      <option>{{ 'escalas.filter.all_months'|trans({}, 'dashboard') }}</option>
                      <option>{{ 'escalas.filter.january'|trans({}, 'dashboard') }}</option>
                      <option>{{ 'escalas.filter.february'|trans({}, 'dashboard') }}</option>
                      <option>{{ 'escalas.filter.march'|trans({}, 'dashboard') }}</option>
                    </select>
                    <select class="form-select form-select-sm" style="width: auto;">
                      <option>{{ 'escalas.filter.all_departments'|trans({}, 'dashboard') }}</option>
                      <option>{{ 'escalas.filter.sound'|trans({}, 'dashboard') }}</option>
                      <option>{{ 'escalas.filter.broadcast'|trans({}, 'dashboard') }}</option>
                      <option>{{ 'escalas.filter.reception'|trans({}, 'dashboard') }}</option>
                      <option>{{ 'escalas.filter.music'|trans({}, 'dashboard') }}</option>
                    </select>
                  </div>
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table text-nowrap mb-0 table-centered table-hover">
                      <thead>
                        <tr>
                          <th>{{ 'escalas.table.date'|trans({}, 'dashboard') }}</th>
                          <th>{{ 'escalas.table.service'|trans({}, 'dashboard') }}</th>
                          <th>{{ 'escalas.table.department'|trans({}, 'dashboard') }}</th>
                          <th>{{ 'escalas.table.role'|trans({}, 'dashboard') }}</th>
                          <th>{{ 'escalas.table.status'|trans({}, 'dashboard') }}</th>
                          <th>{{ 'escalas.table.actions'|trans({}, 'dashboard') }}</th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr>
                          <td>
                            <div>
                              <div class="fw-semibold">15 Fev 2025</div>
                              <div class="small text-secondary">{{ 'dashboard.sample.saturday'|trans({}, 'dashboard') }} — 11:00</div>
                            </div>
                          </td>
                          <td>{{ 'dashboard.service_types.divine_worship'|trans({}, 'dashboard') }}</td>
                          <td>{{ 'escalas.dept.sound'|trans({}, 'dashboard') }}</td>
                          <td>{{ 'escalas.role.sound_operator'|trans({}, 'dashboard') }}</td>
                          <td>
                            <span class="badge text-success-emphasis bg-success-subtle rounded-2">{{ 'escalas.status.confirmed'|trans({}, 'dashboard') }}</span>
                          </td>
                          <td>
                            <a href="#!" class="btn btn-ghost btn-sm">
                              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-arrows-exchange"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M7 10h14l-4 -4" /><path d="M17 14h-14l4 4" /></svg>
                              {{ 'escalas.action.request_swap'|trans({}, 'dashboard') }}
                            </a>
                          </td>
                        </tr>
                        <tr>
                          <td>
                            <div>
                              <div class="fw-semibold">15 Fev 2025</div>
                              <div class="small text-secondary">{{ 'dashboard.sample.saturday'|trans({}, 'dashboard') }} — 11:00</div>
                            </div>
                          </td>
                          <td>{{ 'dashboard.service_types.divine_worship'|trans({}, 'dashboard') }}</td>
                          <td>{{ 'escalas.dept.broadcast'|trans({}, 'dashboard') }}</td>
                          <td>{{ 'escalas.role.camera_operator'|trans({}, 'dashboard') }}</td>
                          <td>
                            <span class="badge text-warning-emphasis bg-warning-subtle rounded-2">{{ 'escalas.status.pending'|trans({}, 'dashboard') }}</span>
                          </td>
                          <td>
                            <div class="d-flex gap-1">
                              <a href="#!" class="btn btn-success btn-sm">{{ 'escalas.action.confirm'|trans({}, 'dashboard') }}</a>
                              <a href="#!" class="btn btn-ghost btn-sm">{{ 'escalas.action.decline'|trans({}, 'dashboard') }}</a>
                            </div>
                          </td>
                        </tr>
                        <tr>
                          <td>
                            <div>
                              <div class="fw-semibold">19 Fev 2025</div>
                              <div class="small text-secondary">{{ 'dashboard.sample.wednesday'|trans({}, 'dashboard') }} — 20:00</div>
                            </div>
                          </td>
                          <td>{{ 'dashboard.service_types.prayer_meeting'|trans({}, 'dashboard') }}</td>
                          <td>{{ 'escalas.dept.music'|trans({}, 'dashboard') }}</td>
                          <td>{{ 'escalas.role.pianist'|trans({}, 'dashboard') }}</td>
                          <td>
                            <span class="badge text-success-emphasis bg-success-subtle rounded-2">{{ 'escalas.status.confirmed'|trans({}, 'dashboard') }}</span>
                          </td>
                          <td>
                            <a href="#!" class="btn btn-ghost btn-sm">
                              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-arrows-exchange"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M7 10h14l-4 -4" /><path d="M17 14h-14l4 4" /></svg>
                              {{ 'escalas.action.request_swap'|trans({}, 'dashboard') }}
                            </a>
                          </td>
                        </tr>
                        <tr>
                          <td>
                            <div>
                              <div class="fw-semibold">22 Fev 2025</div>
                              <div class="small text-secondary">{{ 'dashboard.sample.saturday'|trans({}, 'dashboard') }} — 09:30</div>
                            </div>
                          </td>
                          <td>{{ 'dashboard.service_types.sabbath_school'|trans({}, 'dashboard') }}</td>
                          <td>{{ 'escalas.dept.reception'|trans({}, 'dashboard') }}</td>
                          <td>{{ 'escalas.role.receptionist'|trans({}, 'dashboard') }}</td>
                          <td>
                            <span class="badge text-info-emphasis bg-info-subtle rounded-2">{{ 'escalas.status.swap_requested'|trans({}, 'dashboard') }}</span>
                          </td>
                          <td>
                            <span class="small text-secondary">{{ 'escalas.action.waiting_approval'|trans({}, 'dashboard') }}</span>
                          </td>
                        </tr>
                        <tr>
                          <td>
                            <div>
                              <div class="fw-semibold">01 Mar 2025</div>
                              <div class="small text-secondary">{{ 'dashboard.sample.saturday'|trans({}, 'dashboard') }} — 11:00</div>
                            </div>
                          </td>
                          <td>{{ 'dashboard.service_types.divine_worship'|trans({}, 'dashboard') }}</td>
                          <td>{{ 'escalas.dept.sound'|trans({}, 'dashboard') }}</td>
                          <td>{{ 'escalas.role.sound_operator'|trans({}, 'dashboard') }}</td>
                          <td>
                            <span class="badge text-warning-emphasis bg-warning-subtle rounded-2">{{ 'escalas.status.pending'|trans({}, 'dashboard') }}</span>
                          </td>
                          <td>
                            <div class="d-flex gap-1">
                              <a href="#!" class="btn btn-success btn-sm">{{ 'escalas.action.confirm'|trans({}, 'dashboard') }}</a>
                              <a href="#!" class="btn btn-ghost btn-sm">{{ 'escalas.action.decline'|trans({}, 'dashboard') }}</a>
                            </div>
                          </td>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
{% endblock %}
