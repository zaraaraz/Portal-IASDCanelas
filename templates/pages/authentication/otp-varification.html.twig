{% extends 'base.html.twig' %}

{% block title %}{{ 'auth.otp.title'|trans({}, 'auth') }} | Portal IASDCanelas{% endblock %}

{% block body %}
    <main class="d-flex flex-column justify-content-center vh-100">
      <section>
        <div class="container">
          <div class="row mb-8">
            <div class="col-xl-4 offset-xl-4 col-md-12 col-12">
              <div class="text-center">
                <a href="{{ path('app_home') }}" class="fs-2 fw-bold d-flex align-items-center gap-2 justify-content-center mb-6">
                  <img class="mw-100" src="{{ asset('images/brand/logo/portal_logo_white.png') }}" alt="Logo Portal IASDCanelas" />
                </a>
                <h1 class="mb-1">{{ 'auth.otp.title'|trans({}, 'auth') }}</h1>
                <p class="mb-0">
                  {{ 'auth.otp.subtitle'|trans({}, 'auth') }}
                </p>
              </div>
            </div>
          </div>
          <div class="row justify-content-center">
            <div class="col-xl-4 col-lg-6 col-md-8 col-12">
              <div class="card card-lg mb-6">
                <div class="card-body p-6">

                  {% for label, messages in app.flashes %}
                    {% for message in messages %}
                      <div class="alert alert-{{ label }} mb-4">
                        {{ message|trans({}, 'auth') }}
                      </div>
                    {% endfor %}
                  {% endfor %}

                  <form method="post">
                    <div class="d-flex flex-row gap-2 mb-5">
                      <input type="text" class="form-control inputpass-code" maxlength="1" name="otp_1" oninput="moveToNextInput(this)" />
                      <input type="text" class="form-control inputpass-code" maxlength="1" name="otp_2" oninput="moveToNextInput(this)" />
                      <input type="text" class="form-control inputpass-code" maxlength="1" name="otp_3" oninput="moveToNextInput(this)" />
                      <input type="text" class="form-control inputpass-code" maxlength="1" name="otp_4" oninput="moveToNextInput(this)" />
                    </div>
                    <div class="row">
                      <div class="col-md-12">
                        <div class="d-grid mb-4">
                          <button class="btn btn-primary" type="submit">{{ 'auth.otp.submit'|trans({}, 'auth') }}</button>
                        </div>
                        <div class="text-center mb-3">
                          <span>
                            {{ 'auth.otp.didnt_receive'|trans({}, 'auth') }}
                            <a href="#">{{ 'auth.otp.resend'|trans({}, 'auth') }}</a>
                          </span>
                        </div>
                        <div class="text-center">
                          <a href="{{ path('auth_login') }}">
                            <span>{{ 'auth.otp.back_to_login'|trans({}, 'auth') }}</span>
                          </a>
                        </div>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <div class="position-absolute end-0 bottom-0 m-4">
        <div class="dropdown">
          <button class="btn btn-light btn-icon rounded-circle d-flex align-items-center" type="button" aria-expanded="false" data-bs-toggle="dropdown" aria-label="Toggle theme (auto)">
            <i class="bi theme-icon-active lh-1"><i class="bi theme-icon bi-sun-fill"></i></i>
            <span class="visually-hidden bs-theme-text">Toggle theme</span>
          </button>
          <ul class="dropdown-menu dropdown-menu-end shadow">
            <li>
              <button type="button" class="dropdown-item d-flex align-items-center active" data-bs-theme-value="light" aria-pressed="true">
                <i class="ti theme-icon ti ti-sun"></i>
                <span class="ms-2">Light</span>
              </button>
            </li>
            <li>
              <button type="button" class="dropdown-item d-flex align-items-center" data-bs-theme-value="dark" aria-pressed="false">
                <i class="ti theme-icon ti-moon-stars"></i>
                <span class="ms-2">Dark</span>
              </button>
            </li>
            <li>
              <button type="button" class="dropdown-item d-flex align-items-center" data-bs-theme-value="auto" aria-pressed="false">
                <i class="ti theme-icon ti-circle-half-2"></i>
                <span class="ms-2">Auto</span>
              </button>
            </li>
          </ul>
        </div>
      </div>
    </main>

    {% block javascripts %}
      <script src="{{ asset('js/vendors/password.js') }}"></script>
    {% endblock %}
{% endblock %}
